<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Student.CVTeacherFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:padding="10dp"
            app:layout_constraintRight_toLeftOf="@id/teacher_rating"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txtCursos"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Profesor1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="@id/teacher_rating"
            style="@style/TextAppearance.AppCompat.Title"
            />

        <RatingBar
            android:id="@+id/teacher_rating"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            app:layout_constraintLeft_toRightOf="@id/img_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/teacher_name"
            />
        <TextView
            android:id="@+id/txtCursos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cursos"
            app:layout_constraintTop_toBottomOf="@id/img_profile"
            app:layout_constraintBottom_toTopOf="@id/list_courses"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtCursos"
            app:layout_constraintBottom_toTopOf="@id/txtDistritos"
            />
        <TextView
            android:id="@+id/txtDistritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distritos"
            app:layout_constraintTop_toBottomOf="@id/list_courses"
            app:layout_constraintBottom_toTopOf="@id/list_distrit"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_distrit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtDistritos"
            app:layout_constraintBottom_toTopOf="@id/btn_schedule"
            />
        <Button
            android:id="@+id/btn_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Horario"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
</ScrollView>